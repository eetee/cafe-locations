{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "filesGlob": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/*.ts",
    "./src/*.tsx"
  ],
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}
